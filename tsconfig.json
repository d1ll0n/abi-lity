{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "ES2021",
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "removeComments": false,

    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,

    "noImplicitReturns": true,

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true
  },

  "include": [
    "src/**/*",
    "src/**/*.json",
    "test_garbage/**/*",
    "scripts/**/*",
    "maybe-dont-use/generic",
    "maybe-dont-use/pack",
    "maybe-dont-use/immutables"
  ]
}
